{
    "openapi": "3.0.0",
    "info": {
        "title": "API de Formation Frontend (Recettes, Zoopédia, Espace, Expéditions)",
        "version": "1.0.0",
        "description": "API didactique complète (CRUD, Validation, Multi-Projets) pour les étudiants seniors. Les données sont en mémoire et réinitialisées via POST /reset."
    },
    "servers": [
        {
            "url": "http://localhost:3000",
            "description": "Serveur de développement"
        },
        {
            "url": "https://fake-rest-apis.onrender.com",
            "description": "Serveur déployé"
        }
    ],
    "tags": [
        {
            "name": "Recipes",
            "description": "Gestion des recettes (CRUD, Filtrage)."
        },
        {
            "name": "Animals",
            "description": "Gestion des fiches animales (CRUD, Statut)."
        },
        {
            "name": "Planets",
            "description": "Gestion du catalogue d'exploration spatiale."
        },
        {
            "name": "Expeditions",
            "description": "Planification et suivi des missions spatiales."
        },
        {
            "name": "System",
            "description": "Opérations système (Upload, Reset)."
        }
    ],
    "paths": {
        "/upload": {
            "post": {
                "tags": [
                    "System"
                ],
                "summary": "UPLOAD: Téléversement d'une photo",
                "description": "Endpoint générique pour téléverser une image (FormData). Le nom du champ doit être 'photo'. Retourne le nom du fichier à utiliser dans la requête POST.",
                "requestBody": {
                    "required": true,
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "photo": {
                                        "type": "string",
                                        "format": "binary",
                                        "description": "Le fichier image à téléverser (clé: 'photo')."
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Upload réussi. Retourne le nom du fichier.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "filename": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Erreur de fichier ou de format"
                    }
                }
            }
        },
        "/reset": {
            "post": {
                "tags": [
                    "System"
                ],
                "summary": "RESET: Réinitialisation de toutes les données",
                "description": "Réinitialise les collections /recipes, /animals, /planets et /expeditions à leur état initial.",
                "responses": {
                    "200": {
                        "description": "Réinitialisation effectuée avec succès."
                    }
                }
            }
        },
        "/recipes": {
            "get": {
                "tags": [
                    "Recipes"
                ],
                "summary": "READ: Liste des recettes",
                "responses": {
                    "200": {
                        "description": "Liste des recettes",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Recipe"
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "tags": [
                    "Recipes"
                ],
                "summary": "CREATE: Ajout d'une nouvelle recette",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/RecipeCreation"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Création réussie"
                    },
                    "400": {
                        "description": "Erreur de validation"
                    }
                }
            }
        },
        "/recipes/{id}": {
            "parameters": [
                {
                    "name": "id",
                    "in": "path",
                    "required": true,
                    "schema": {
                        "type": "integer"
                    }
                }
            ],
            "patch": {
                "tags": [
                    "Recipes"
                ],
                "summary": "UPDATE: Mise à jour partielle (ex: likes ou photo)",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/RecipePatch"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Mise à jour réussie"
                    },
                    "404": {
                        "description": "Recette non trouvée"
                    }
                }
            },
            "delete": {
                "tags": [
                    "Recipes"
                ],
                "summary": "DELETE: Suppression d'une recette",
                "responses": {
                    "204": {
                        "description": "Suppression réussie"
                    }
                }
            }
        },
        "/animals": {
            "get": {
                "tags": [
                    "Animals"
                ],
                "summary": "READ: Liste des animaux",
                "responses": {
                    "200": {
                        "description": "Liste des animaux",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Animal"
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "tags": [
                    "Animals"
                ],
                "summary": "CREATE: Ajout d'un nouvel animal",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/AnimalCreation"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Création réussie"
                    },
                    "400": {
                        "description": "Erreur de validation"
                    }
                }
            }
        },
        "/animals/{id}": {
            "parameters": [
                {
                    "name": "id",
                    "in": "path",
                    "required": true,
                    "schema": {
                        "type": "integer"
                    }
                }
            ],
            "patch": {
                "tags": [
                    "Animals"
                ],
                "summary": "UPDATE: Mise à jour partielle (Statut de santé/Adoption)",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/AnimalPatch"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Mise à jour réussie"
                    },
                    "404": {
                        "description": "Animal non trouvé"
                    }
                }
            },
            "delete": {
                "tags": [
                    "Animals"
                ],
                "summary": "DELETE: Suppression de la fiche (Adoption/Retrait)",
                "responses": {
                    "204": {
                        "description": "Suppression réussie"
                    }
                }
            }
        },
        "/planets": {
            "get": {
                "tags": [
                    "Planets"
                ],
                "summary": "READ: Liste des planètes",
                "responses": {
                    "200": {
                        "description": "Liste des planètes",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Planet"
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "tags": [
                    "Planets"
                ],
                "summary": "CREATE: Ajout d'une nouvelle découverte",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/PlanetCreation"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Création réussie"
                    },
                    "400": {
                        "description": "Erreur de validation"
                    }
                }
            }
        },
        "/planets/{id}": {
            "parameters": [
                {
                    "name": "id",
                    "in": "path",
                    "required": true,
                    "schema": {
                        "type": "integer"
                    }
                }
            ],
            "patch": {
                "tags": [
                    "Planets"
                ],
                "summary": "UPDATE: Mise à jour du statut (PATCH)",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/PlanetPatch"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Mise à jour réussie"
                    }
                }
            },
            "delete": {
                "tags": [
                    "Planets"
                ],
                "summary": "DELETE: Retrait de la planète du catalogue",
                "responses": {
                    "204": {
                        "description": "Suppression réussie"
                    }
                }
            }
        },
        "/expeditions": {
            "get": {
                "tags": [
                    "Expeditions"
                ],
                "summary": "READ: Liste des expéditions",
                "responses": {
                    "200": {
                        "description": "Liste des expéditions",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Expedition"
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "tags": [
                    "Expeditions"
                ],
                "summary": "CREATE: Planification d'une nouvelle expédition",
                "description": "Nécessite un 'planet_id' valide.",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/ExpeditionCreation"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Création réussie"
                    },
                    "400": {
                        "description": "Erreur de validation ou ID de planète invalide."
                    }
                }
            }
        },
        "/expeditions/{id}": {
            "parameters": [
                {
                    "name": "id",
                    "in": "path",
                    "required": true,
                    "schema": {
                        "type": "integer"
                    }
                }
            ],
            "patch": {
                "tags": [
                    "Expeditions"
                ],
                "summary": "UPDATE: Mise à jour du statut ou de l'équipage (PATCH)",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/ExpeditionPatch"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Mise à jour réussie"
                    }
                }
            },
            "delete": {
                "tags": [
                    "Expeditions"
                ],
                "summary": "DELETE: Annulation de l'expédition",
                "responses": {
                    "204": {
                        "description": "Suppression réussie"
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Recipe": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer",
                        "readOnly": true
                    },
                    "title": {
                        "type": "string"
                    },
                    "category": {
                        "type": "string",
                        "enum": [
                            "Entrée",
                            "Plat Principal",
                            "Dessert"
                        ]
                    },
                    "likes": {
                        "type": "integer"
                    },
                    "preparation_time_min": {
                        "type": "integer"
                    },
                    "ingredients": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "is_vegetarian": {
                        "type": "boolean"
                    },
                    "photo": {
                        "type": "string"
                    }
                }
            },
            "RecipeCreation": {
                "type": "object",
                "required": [
                    "title",
                    "ingredients",
                    "category",
                    "photo"
                ],
                "properties": {
                    "title": {
                        "type": "string"
                    },
                    "category": {
                        "type": "string"
                    },
                    "preparation_time_min": {
                        "type": "integer"
                    },
                    "ingredients": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "is_vegetarian": {
                        "type": "boolean"
                    },
                    "photo": {
                        "type": "string"
                    }
                }
            },
            "RecipePatch": {
                "type": "object",
                "properties": {
                    "likes": {
                        "type": "integer"
                    },
                    "photo": {
                        "type": "string"
                    }
                }
            },
            "Animal": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer",
                        "readOnly": true
                    },
                    "name": {
                        "type": "string"
                    },
                    "species": {
                        "type": "string"
                    },
                    "age": {
                        "type": "integer"
                    },
                    "health_status": {
                        "type": "string",
                        "enum": [
                            "Sain",
                            "Malade",
                            "En quarantaine"
                        ]
                    },
                    "adoption_status": {
                        "type": "string",
                        "enum": [
                            "Disponible",
                            "Non disponible",
                            "Adopté"
                        ]
                    },
                    "enclosure": {
                        "type": "string"
                    },
                    "image": {
                        "type": "string"
                    }
                }
            },
            "AnimalCreation": {
                "type": "object",
                "required": [
                    "name",
                    "species",
                    "enclosure",
                    "age",
                    "image"
                ],
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "species": {
                        "type": "string"
                    },
                    "enclosure": {
                        "type": "string"
                    },
                    "age": {
                        "type": "integer"
                    },
                    "image": {
                        "type": "string"
                    }
                }
            },
            "AnimalPatch": {
                "type": "object",
                "properties": {
                    "health_status": {
                        "type": "string"
                    },
                    "adoption_status": {
                        "type": "string"
                    },
                    "enclosure": {
                        "type": "string"
                    },
                    "image": {
                        "type": "string"
                    }
                }
            },
            "Planet": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer",
                        "readOnly": true
                    },
                    "name": {
                        "type": "string"
                    },
                    "type": {
                        "type": "string",
                        "enum": [
                            "Tellurique",
                            "Gazeuse",
                            "Lune"
                        ]
                    },
                    "distance_al": {
                        "type": "number",
                        "format": "float"
                    },
                    "gaseous": {
                        "type": "boolean"
                    },
                    "status": {
                        "type": "string",
                        "enum": [
                            "Connue",
                            "Candidat Habitable",
                            "Habitable Confirmé"
                        ]
                    },
                    "discovery_date": {
                        "type": "string",
                        "format": "date"
                    },
                    "icon": {
                        "type": "string"
                    }
                }
            },
            "PlanetCreation": {
                "type": "object",
                "required": [
                    "name",
                    "type",
                    "distance_al",
                    "icon"
                ],
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "type": {
                        "type": "string"
                    },
                    "distance_al": {
                        "type": "number"
                    },
                    "gaseous": {
                        "type": "boolean"
                    },
                    "icon": {
                        "type": "string"
                    }
                }
            },
            "PlanetPatch": {
                "type": "object",
                "properties": {
                    "status": {
                        "type": "string"
                    },
                    "distance_al": {
                        "type": "number"
                    },
                    "icon": {
                        "type": "string"
                    }
                }
            },
            "Expedition": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer",
                        "readOnly": true
                    },
                    "title": {
                        "type": "string"
                    },
                    "planet_id": {
                        "type": "integer",
                        "description": "ID de la planète de destination."
                    },
                    "destination_name": {
                        "type": "string",
                        "readOnly": true,
                        "description": "Nom de la planète (ajouté par le serveur au GET)."
                    },
                    "date": {
                        "type": "string",
                        "format": "date"
                    },
                    "status": {
                        "type": "string",
                        "enum": [
                            "En cours",
                            "Terminée",
                            "Annulée"
                        ]
                    },
                    "crew_size": {
                        "type": "integer"
                    }
                }
            },
            "ExpeditionCreation": {
                "type": "object",
                "required": [
                    "title",
                    "planet_id",
                    "date"
                ],
                "properties": {
                    "title": {
                        "type": "string"
                    },
                    "planet_id": {
                        "type": "integer"
                    },
                    "date": {
                        "type": "string",
                        "format": "date"
                    },
                    "crew_size": {
                        "type": "integer"
                    }
                }
            },
            "ExpeditionPatch": {
                "type": "object",
                "properties": {
                    "status": {
                        "type": "string",
                        "description": "Mise à jour du statut de la mission."
                    },
                    "crew_size": {
                        "type": "integer",
                        "description": "Modification de la taille de l'équipage."
                    }
                }
            }
        }
    }
}